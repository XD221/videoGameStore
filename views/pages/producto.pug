extends ../layout 

block head 
  link(rel="stylesheet" href="stylesheets/registros.css")

block content
  .container.mt-5.mb-5
  .col-md-10
    button(id="btnAgregar" type="button" class="btn btn-primary") Agregar Producto 
    div(class="mt-3")
      h4 
        | â–  Para editar un Producto seleccione el nombre en azul del mismo  
    div(class="modal fade" id="agregar" tabindex="-1" aria-labelledby="agregar" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title" id="exampleModalLabel")
            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
          div(class="modal-body")
            h6 Nombre 
            .form-input
              input#nombre.form-control(type='text' autocomplete="off"
              oninput='javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);' 
              maxlength='30')
            h6 URL de la Imagen 
            .form-input
              input#urlIMG.form-control(type='text' autocomplete="off")
            h6 Precio 
            .form-input
              input#precio.form-control(type='text' autocomplete="off"
              oninput='javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);' 
              maxlength='9999999' onkeypress='return /[0-9]/i.test(event.key)'
              oncut='return false' oncopy='return false' onpaste='return false' ondrag='return false' ondrop='return false')
            h6 Cantidad 
              input#cantidad.form-control(type='text' autocomplete="off"
              oninput='javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);' 
              maxlength='9999' onkeypress='return /[0-9]/i.test(event.key)'
              oncut='return false' oncopy='return false' onpaste='return false' ondrag='return false' ondrop='return false')
            h6 Categoria 
              select#categoria.form-select
            h6 Marca 
              select#marca.form-select
          div(class="modal-footer")
            button(id="btnCancelar" type="button" class="btn btn-secondary" data-bs-dismiss="modal") Cerrar
            button(id="btnGuardar" type="button" class="btn btn-primary") Guardar
            button(id="btnEditar" type="button" class="btn btn-primary") Modificar
    div(class="card mt-4")
      div(class="card-header")
        span 
          i(class="bi bi-table me-2") Registro de Productos
      div(class="card-body")
        div(class="table-responsive")
          table(id="tbl" class="table table-striped data-table" style="width: 100%")
            thead
              tr
                th NOMBRE
                th URL
                th PRECIO
                th STOCK
                th CATEGORIA
                th MARCA
                th ACCION
            tbody
            tfoot
    div(class="modal fade" id="eliminar" tabindex="-1" aria-labelledby="eliminar" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title" id="exampleModalLabel")
            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
          div(class="modal-body")
            p.text-mensaje-modal
          div(class="modal-footer")
            button(id="btnEliminarCancelar" type="button" class="btn btn-secondary" data-bs-dismiss="modal") Cerrar
            button(id="btnEliminarAceptar" type="button" class="btn btn-primary") Aceptar

block footer
  script(src="javascripts/pages/producto.js")