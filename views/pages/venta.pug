extends ../layout 

block head 
  link(rel="stylesheet" href="stylesheets/registros.css")

block content
  .container.mt-5.mb-5
  .col-md-10
    form(method="POST" action="/venta/agregar").form-input(class='col-3')
      input#agregar.form-control(type="submit"  class='btn btn-dark text-white' value='Agregar Venta' )
    div(class="mt-3")
      h4 
        | â–  Para ver los datos de una Compra seleccione la fecha en azul del mismo  
    div(class="card mt-4")
      div(class="card-header")
        span 
          i(class="bi bi-table me-2") Registro de Ventas
      div(class="card-body")
        div(class="table-responsive")
          table(id="tbl" class="table table-striped data-table" style="width: 100%")
            thead
              tr
                th FECHA
                th TOTAL
                th CLIENTE
                th EMPLEADO
                th ESTADO
            tbody
            tfoot
    div(class="modal fade" id="modalTable" tabindex="-1" aria-labelledby="eliminar" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title" id="exampleModalLabel")
            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
          div(class="modal-body")
            div(class="card mt-4")
              div(class="card-header")
                span 
                  i(class="bi bi-table me-2") 
              div(class="card-body")
                div(class="table-responsive")
                  table(id="tblModal" class="table table-striped data-table" style="width: 100%")
                    thead
                      tr
                        th IMAGEN
                        th NOMBRE
                        th CANTIDAD
                        th PRECIO
                    tbody
                    tfoot
          div(class="modal-footer")
            button(id="btnCancelDetail" type="button" class="btn btn-secondary" data-bs-dismiss="modal") Cerrar

block footer
  script(src="javascripts/pages/venta.js")